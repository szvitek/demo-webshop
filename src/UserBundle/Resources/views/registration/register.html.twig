{% extends '::layout.html.twig' %}

{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-xs-12 well">
            <h1>Register!</h1>
            {{ form_start(form) }}
            {{ form_row(form.username) }}
            {{ form_row(form.email) }}
            {{ form_row(form.plainPassword.first) }}
            {{ form_row(form.plainPassword.second) }}
            <hr/>
            <button class="btn btn-success pull-right" type="submit">+<span class="glyphicon glyphicon-user"></span> Register</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}